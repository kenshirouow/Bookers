<%= flash[:notice] %>
<h1>Books</h1>
<table class="teble">
  <thead>
    <tr>
      <th class="header1">Title</th>
      <th class="header2">Body</th>
      <th class="header3"></th>
    </tr>
  </thead>
  <% @books.each do |book| %>
    <tbody>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td>
          <%= link_to "Show", book_path(book.id) %>
          <%= link_to "Edit", edit_book_path(book.id) %>
          <%= link_to "Destroy", book_path(book.id), method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>

<!-- バリデーションの実行 -->
<% if @book.errors.any? %>
  <h3><%= pluralize(@book.errors.count,"error") %> prohibited this book from being saved:</h3>
  <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>
<!-- ここまで -->


<h2>New book</h2>
<%= form_for(@book) do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %><br>
  <%= f.submit "Create Book" %>
<% end %>